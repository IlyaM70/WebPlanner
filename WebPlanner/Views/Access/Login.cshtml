@model WebPlanner.Models.LoginViewModel;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Войти</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPlanner.styles.css" asp-append-version="true"/> 
</head>
<body>
    <div class="container-xl mt-5">
        <form asp-controller="Access" asp-action="Login" method="post">
            <h1 class="text-center">Вход</h1>
            <div class="d-flex justify-content-center">
                <div class="col-10 col-sm-6 col-md-3 d-flex flex-column">
                    <input class="mt-3 form-control" type="text" placeholder="Имя пользователя" asp-for="Login"
                    data-val-required="Введите имя пользователя"/>
                    <span asp-validation-for="Login" class="text-danger mt-2"></span>

                    <input class="mt-3 form-control" type="password" placeholder="Пароль" asp-for="Password"
                    data-val-required="Введите пароль"/>
                    <span asp-validation-for="Password" class="text-danger mt-2"></span>

                    <div class="form-check">
                        <label class="mt-3 d-block form-check-label">
                            <input class = "form-check-input" type="checkbox" asp-for="KeepLoggedIn"/>
                            Запомнить меня
                        </label>
                    </div>
                    <button class="mt-3 btn btn-primary" type="submit">Войти</button>
                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <div class="mt-3 text-danger fw-bold">@ViewData["ValidateMessage"]</div>
                    }
                    <a class="mt-3" asp-action="Register" asp-controller="Access">Регистрация</a>
               </div>
            </div>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
