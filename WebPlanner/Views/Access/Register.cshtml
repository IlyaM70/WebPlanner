@model WebPlanner.Models.User
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Регистрация</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebPlanner.styles.css" asp-append-version="true"/> 
</head>
<body>
    <div class="container-xl mt-5">
        <form asp-controller="Access" asp-action="Register" method="post">
            <h1 class="text-center">Регистрация</h1>
            <div class="d-flex justify-content-center">
                <div class="col-10 col-sm-6 col-md-3 d-flex flex-column">
                   <input class="mt-3 form-control" type="text" placeholder="Имя пользователя" asp-for="Name" 
                   data-val-required="Введите имя пользователя" />
                   <span asp-validation-for="Name" class="text-danger mt-2"></span>

                   <input class="mt-3 form-control" type="email" placeholder="Email" asp-for="Email"
                   data-val-required="Введите email" data-val-email="Введите корректный email"/>
                   <span asp-validation-for="Email" class="text-danger mt-2"></span>

                    <input class="mt-3 form-control" type="password" placeholder="Пароль" asp-for="Password"
                    data-val-required="Введите пароль"/>
                    <span asp-validation-for="Password" class="text-danger mt-2"></span>

                    <button class="mt-3 btn btn-primary" type="submit">Отправить</button>
                    @if (ViewData["ValidateMessage"] != null)
                    {
                        <div class="mt-3 text-danger fw-bold">@ViewData["ValidateMessage"]</div>
                    }
                    <a class="mt-3" asp-action="Login" asp-controller="Access">Назад</a>
               </div>
            </div>
        </form>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>

